#:import DropDown kivy.uix.dropdown

WindowManager:
    RegisterScreen:
    LoginScreen:
    MainScreen:
    AddingBillScreen:
    MakingTransferScreen:

<RegisterScreen>:
    name: "RegisterScreen"

    GridLayout:
        rows: 6

        TextInput:
            id: accEmail
            hint_text: "Pass your email"
        TextInput:
            id: accFirstName
            hint_text: "Pass your name"
        TextInput:
            id: accLastName
            hint_text: "Pass your lastname"
        TextInput:
            password: True
            id: accPassword
            hint_text: "Pass your password"
        GridLayout:
            id: informationGrid
            cols: 1
            Label:
                id: information
        GridLayout:
            cols: 2
            Button:
                text: "Register"
                on_press:
                    root.loadingLabel()
                on_release:
                    root.register()
            Button:
                text: "I have an account. Login"
                on_release:
                    app.root.current = "LoginScreen"

<LoginScreen>:
    name: "LoginScreen"

    GridLayout:
        rows: 2

        GridLayout:
            rows: 3
            TextInput:
                id: accEmail
                hint_text: "Pass email"
            TextInput:
                password: True
                id: accPassword
                hint_text: "Pass email"
            Label:
                id: information
        GridLayout:
            cols: 2
            Button:
                text: "Login"
                on_press:
                    root.loadingLabel()
                on_release:
                    root.login()
            Button:
                text: "I don't have an account. Register"
                on_release:
                    app.root.current = "RegisterScreen"

<MainScreen>:
    name: "MainScreen"

    on_pre_enter:
        root.createData()

    GridLayout:
        rows: 3
        GridLayout:
            cols: 2
            Spinner:
                id: selectedBill
                text: "Select a bill"
            Button:
                text: "Logout"
                on_release:
                    root.logout()
        Label:
            id: mainWelcome
        GridLayout:
            cols: 4
            Button:
                text: "Create new bill"
                on_release:
                    app.root.current = "AddingBillScreen"
            Button:
                text: "Make a transfer"
                on_release:
                    app.root.current = "MakingTransferScreen"

<AddingBillScreen>:
    name: "AddingBillScreen"

    on_pre_enter:
        root.createData()

    GridLayout:
        rows: 4

        Label:
            text: "Pass new bill data"
        TextInput:
            id: billName
            hint_text: "Pass bill name"
        Label:
            id: information
        GridLayout:
            cols: 2
            Button:
                text: "Back"
                on_release:
                    app.root.current = "MainScreen"
            Button:
                text: "Add bill"
                on_press:
                    root.loadingLabel()
                on_release:
                    root.addBill()

<MakingTransferScreen>:
    name: "MakingTransferScreen"

    on_pre_enter:
        root.createData()
    GridLayout:
        rows: 5
        GridLayout:
            cols: 2
            Label:
                text: "From:"
            Spinner:
                id: selectBill
                text: "Select a bill"
        GridLayout:
            rows: 2
            BoxLayout:
                orientation: "horizontal"
                Label:
                    text: "To:"
                GridLayout:
                    cols: 2
                    ToggleButton:
                        id: optionNumber
                        text: "Pass a number"
                        group: "receiverOptions"
                        on_release:
                            root.chooseOption()
                        allow_no_selection: False
                    ToggleButton:
                        id: optionFavorites
                        text: "Select from favorites"
                        state: "down"
                        group: "receiverOptions"
                        on_release:
                            root.chooseOption()
                        allow_no_selection: False
            BoxLayout:
                id: passingReceiverInput
                TextInput:
                    id: billNumber
                    text_hint: "Type here"
                    input_filter: "int"
                Spinner:
                    id: favoriteBills
        GridLayout:
            rows: 2
            GridLayout:
                cols: 2
                Label:
                    text: "Amount($)"
                TextInput:
                    id: amount
                    input_filter: "float"
                    on_text:
                        root.validateAmount()
            GridLayout:
                cols: 2
                Label:
                    text: "Note"
                TextInput:
                    id: note
        Label:
            id: information
        GridLayout:
            cols: 2
            Button:
                text: "Back"
                on_release:
                    app.root.current = "MainScreen"
            Button:
                text: "Confirm a transfer"
                on_press:
                    root.loadingLabel()
                on_release:
                    root.makeTransfer()
