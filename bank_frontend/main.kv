#:import FadeTransition kivy.uix.screenmanager.FadeTransition
#:import DropDown kivy.uix.dropdown

WindowManager:
    transition: FadeTransition()
    RegisterScreen:
    LoginScreen:
    MainScreen:
    AddingBillScreen:

<RegisterScreen>:
    name: "RegisterScreen"

    GridLayout:
        rows: 6
        TextInput:
            id: accEmail
            hint_text: "Pass your email"
        TextInput:
            id: accFirstName
            hint_text: "Pass your name"
        TextInput:
            id: accLastName
            hint_text: "Pass your lastname"
        TextInput:
            password: True
            id: accPassword
            hint_text: "Pass your password"
        GridLayout:
            id: informationGrid
            cols: 1
            Label:
                id: information
        GridLayout:
            cols: 2
            Button:
                text: "Register"
                on_press:
                    root.loadingLabel()
                on_release:
                    root.register()
            Button:
                text: "I have an account. Login"
                on_release:
                    app.root.current = "LoginScreen"

<LoginScreen>:
    name: "LoginScreen"

    GridLayout:
        rows: 2

        GridLayout:
            rows: 3
            TextInput:
                id: accEmail
                hint_text: "Pass email"
            TextInput:
                password: True
                id: accPassword
                hint_text: "Pass email"
            Label:
                id: information
        GridLayout:
            cols: 2
            Button:
                text: "Login"
                on_press:
                    root.loadingLabel()
                on_release:
                    root.login()
            Button:
                text: "I don't have an account. Register"
                on_release:
                    app.root.current = "RegisterScreen"

<MainScreen>:
    name: "MainScreen"

    GridLayout:
        rows: 3
        GridLayout:
            cols: 2
            Spinner:
                id: selectedBill
            Button:
                text: "Logout"
                on_release:
                    root.logout()
        Label:
            id: accNumber
        GridLayout:
            cols: 4
            Button:
                text: "Create new bill"
                on_release:
                    app.root.current = "AddingBillScreen"

<AddingBillScreen>:
    name: "AddingBillScreen"

    GridLayout:
        rows: 4

        Label:
            text: "Pass new bill data"
        TextInput:
            id: billName
            hint_text: "Pass bill name"
        Label:
            id: information
        GridLayout:
            cols: 2
            Button:
                text: "Back"
                on_release:
                    app.root.current = "MainScreen"
            Button:
                text: "Add bill"
                on_press:
                    root.loadingLabel()
                on_release:
                    root.addBill()